        <tr>
            <td style="width:10%">
                @Html.DisplayFor(modelItem => item.COD_ITEM)
            </td>

            <td style="width:50%">
                @Html.DisplayFor(modelItem => item.NOM_ITEM)
            </td>

            <td style="width:10%">
                @Html.DisplayFor(modelItem => item.CINI)
            </td>

            <td style="width:10%">
