<script>
    $('.select2').select2();
    
    $(document).ready(function () {
         if (@ViewBag.EsNuevo==1) {
             $("#COMPDIAR").val(0);
             $("#COMPEGRE").val(0);
             $("#COMPINGRE").val(0);
             $("#NUMASIEN").val(0);
