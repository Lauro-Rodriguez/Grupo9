@model SIGEFINew.Models.Inventarios.IN_BODEGAS

@{
    ViewBag.Title = "Delete";
}

<div class="col-md-8">
    <div class="box box-warning">
        <div class="box-header with-border">
            <i class="glyphicon glyphicon-remove-sign"></i>
            <h3 class="box-title">Borrar Bodega</h3>
        </div>
        <div class="box-body">
            @if (@ViewBag.MsgError != null)
            {
                <div class="col-md-12">
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                        <h4><i class="icon alert-danger"></i>Mensaje</h4>
                        @ViewBag.MsgError
                    </div>
                </div>
            }
            <h4>Está seguro de borrar este registro?</h4>
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.NOM_BODEGA)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NOM_BODEGA)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TIPO_BODEGA)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TIPO_BODEGA)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DIR_BODEGA)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DIR_BODEGA)
                </dd>

            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Borrar" class="btn btn-danger" /> |
                    @Html.ActionLink("Regresar a la lista", "Index")
                </div>
            }
        </div>
    </div>
</div>


