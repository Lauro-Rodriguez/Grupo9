@model IEnumerable<SIGEFINew.Models.POA.POA_META_PDOT>

@{
    ViewBag.Title = "Metas";
}

<br />
<br />
<h2>Metas</h2>

<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <input type="button" value="Nuevo" onclick="@("location.href='"+ Url.Action("Create","POA_META_PDOT",new { @id = @ViewBag.OE_PDOT,@id2 = @ViewBag.PO_PDOT})+ "'")" class="btn btn-primary" />
        </div>
        <div class="col-md-5">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>
    </div>

</div>
<table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.COD_META_PDOT)
        </th>
        <th>
            Política
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOM_POL_PDOT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOM_IND_PDOT)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.COD_META_PDOT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.POA_POL_PDOT.NOM_POL_PDOT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NOM_POL_PDOT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NOM_IND_PDOT)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.COD_OE_PDOT, id2 = item.COD_POL_PDOT, id3 = item.COD_META_PDOT }) |
        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
        @Html.ActionLink("Borrar", "Delete", new { id = item.COD_OE_PDOT, id2 = item.COD_POL_PDOT, id3 = item.COD_META_PDOT })
    </td>
</tr>
}

</table>
