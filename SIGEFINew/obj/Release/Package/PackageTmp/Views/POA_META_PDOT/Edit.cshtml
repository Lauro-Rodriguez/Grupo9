@model SIGEFINew.Models.POA.POA_META_PDOT

@{
    ViewBag.Title = "Editar";
}

<br />
<br />
<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <section class="card2">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Información General</a></li>
            </ul>
            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">
                    <div class="form-horizontal">
                        <h4>Meta PDOT</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.COD_OE_PDOT)

                        @Html.HiddenFor(model => model.COD_POL_PDOT)

                        @Html.HiddenFor(model => model.COD_META_PDOT)

                        <div class="form-group">
                            @Html.LabelFor(model => model.NOM_POL_PDOT, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.NOM_POL_PDOT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NOM_POL_PDOT, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NOM_IND_PDOT, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.NOM_IND_PDOT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NOM_IND_PDOT, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        </div>

                        <div>
                            @Html.ActionLink("Regresar a la Lista", "Index")
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>

    
}


