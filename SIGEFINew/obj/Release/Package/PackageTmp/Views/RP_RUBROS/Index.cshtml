@model IEnumerable<SIGEFINew.Models.Nomina.RP_RUBROS>

<div class="form-group">
    <div class="row">
        @if (ViewBag.IdRol > 0)
        {
            <div class="col-md-1">
                <input id="buttonnew" type="button" value="Nuevo" onclick="@("location.href='"+ Url.Action("Create","RP_RUBROS",new {@id =@ViewBag.CodPlan,@id2 =@ViewBag.OrgCodi,@id3 =@ViewBag.CodPlanObj })+ "'")" class="btn btn-primary" />
            </div>
            @*<div class="col-md-2">
                @Html.DropDownList("Tipo", ViewBag.TIPO as SelectList, new { @class = "form-control col-md-1", onchange = "this.form.submit();" })
            </div>*@
        }
        @*else
        {
            <div class="col-md-2">
                @Html.DropDownList("Tipo", ViewBag.TIPO as SelectList, new { @class = "form-control col-md-2", onchange = "this.form.submit();" })
            </div>
        }*@

        <div class="col-md-5">
            @using (Html.BeginForm())
            {
                <div class="col-md-3">
                    @Html.DropDownList("Tipo", ViewBag.TIPO as SelectList, new { @class = "form-control", onchange = "this.form.submit();" })
                </div>

                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre,Descripción,Observaciones" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>
        <div class="btn-group">
            <div class="col-md-5">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-print"></span> Imprimir
                </button>


                @*<button type="submit" class="btn btn-primary" onclick="addNewOrder()">
                    <span class="glyphicon glyphicon-pencil"></span> Firmas
                </button>*@
            </div>
            <div class="col-md-7">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary">Opciones</button>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Tabla Anual del Impuesto a la Renta</a></li>
                        <li><a href="#">Tabla Anual del Discapacidad</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Rubros</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.COD_RUBRO)
                    </th>
                    <th style="width:15%">
                        @Html.DisplayNameFor(model => model.NOM_RUBRO)
                    </th>
                    <th style="width:30%">
                        @Html.DisplayNameFor(model => model.DESCRIPCION)
                    </th>
                    <th style="width:5%">
                        @Html.DisplayNameFor(model => model.TIPO)
                    </th>
                    <th style="width:30%">
                        @Html.DisplayNameFor(model => model.OBSERVACIONES)
                    </th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.COD_RUBRO)
                    </td>
                    <td style="width:15%">
                        @Html.DisplayFor(modelItem => item.NOM_RUBRO)
                    </td>
                    <td style="width:30%">
                        @Html.DisplayFor(modelItem => item.DESCRIPCION)
                    </td>
                    <td style="width:5%">
                        @Html.DisplayFor(modelItem => item.TIPO)
                    </td>
                    <td style="width:30%">
                        @Html.DisplayFor(modelItem => item.OBSERVACIONES)
                    </td>
                    <td style="width:10%">
                        @Html.ActionLink(" ", "Create", new { id = item.COD_RUBRO, CodRubro = item.COD_RUBRO }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { id = item.COD_RUBRO, CodRubro = item.COD_RUBRO }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

