@model SIGEFINew.Models.Barrios
<div class="panel-info">
    <div class="panel-heading">
        Datos del Barrio
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.HiddenFor(model => model.ID_PROVINCIA)
            @Html.HiddenFor(model => model.ID_CANTON)
            @Html.HiddenFor(model => model.ID_PARROQUIA)

            @*@Html.LabelFor(model => model.PROG_NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-8">
                @Html.Editor("DESCRIPCION", new { htmlAttributes = new { @class = "form-control input-sm" } })
                @Html.ValidationMessage("DESCRIPCION", "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <button onclick="HideSP(1,@ViewBag.EsNuevo)" type="button" class="btn btn-success btn-sm" data-toggle="tooltip" title="Aceptar">
                    <span class="fa fa-check"></span>
                </button>

                <button onclick="HideSubProg()" type="button" class="btn btn-warning btn-sm" data-toggle="tooltip" title="Cancelar">
                    <span class="fa fa-remove"></span>
                </button>

            </div>
        </div>
    </div>
</div>

<script src="../../content/bower_components/jquery/dist/jquery.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<script>
    $('#DESCRIPCION').keyup(function () {
        var datos = new String($('#DESCRIPCION').val());
        datos = datos.toUpperCase(datos);
        $('#DESCRIPCION').val(datos);
    })
</script>

