                        {
                            @Html.ActionLink(" ", "_AsignaCaso", new { CodPlan = item.COD_PLAN, CodPObtvo = item.COD_PLANOBJTVO, CodFase = item.COD_FASE }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Aprobar" })
                        }

