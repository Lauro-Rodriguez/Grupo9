    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.FECHA)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.POA_PLANOBJETIVOS.COD_OE_PLANIF)
                    </th>*@
                    @*<th>
                        @Html.DisplayNameFor(model => model.COD_INDICADOROJ)
