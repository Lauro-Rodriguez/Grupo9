                    </td>
                  
                  
                    <td style="width:10%">
                        @Html.ActionLink(" ", "Details", new { CodPlan = item.COD_PLAN, CodPObtvo = item.COD_PLANOBJTVO, CodFase = item.COD_FASE }, new { @class = "btn btn-success glyphicon glyphicon-open-file btn-xs", data_toggle = "tooltip", title = "Ver Documentos" })
