@model SIGEFINew.Models.Presupuesto.Programa
<div class="panel-info">
    <div class="panel-heading">
        Datos del Programa
    </div>
    <div class="panel-body">
        <div class="form-group">
            @*@Html.LabelFor(model => model.PROG_CODIGO, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-2">
                @Html.Editor("PROG_CODIGO", new { htmlAttributes = new { @class = "form-control input-sm", id = "pc" } })
                @Html.ValidationMessage("PROG_CODIGO", "", new { @class = "text-danger" })
            </div>

            @*@Html.LabelFor(model => model.PROG_NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-8">
                @Html.Editor("PROG_NOMBRE", new { htmlAttributes = new { @class = "form-control input-sm" } })
                @Html.ValidationMessage("PROG_NOMBRE", "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <button onclick="Hide(1,@ViewBag.EsNuevo)" type="button" class="btn btn-success btn-sm" data-toggle="tooltip" title="Aceptar">
                    <span class="fa fa-check"></span>
                </button>

                <button onclick="HideProg()" type="button" class="btn btn-warning btn-sm" data-toggle="tooltip" title="Cancelar">
                    <span class="fa fa-remove"></span>
                </button>

                @*<input type="button" value="+" onclick="Hide(1,@ViewBag.EsNuevo)" class="btn btn-success input-sm" />*@
                @*<input type="button" value="x" onclick="HideProg()" class="btn btn-warning input-sm" />*@
            </div>
        </div>
    </div>
</div>

<script>
    $('#PROG_NOMBRE').keyup(function () {
        var datos = new String($('#PROG_NOMBRE').val());
        datos = datos.toUpperCase(datos);
        $('#PROG_NOMBRE').val(datos);
    })
</script>