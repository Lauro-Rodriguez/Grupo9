
@model SIGEFINew.Models.Presupuesto.Actividad
<div class="panel-info">
    <div class="panel-heading">
        Datos de la Actividad
    </div>
    <div class="panel-body">
        <div class="form-group">
            @*@Html.LabelFor(model => model.PROG_CODIGO, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.HiddenFor(model => model.SUBP_CODIGO)
            @Html.HiddenFor(model => model.PROG_CODIGO)
            @Html.HiddenFor(model => model.PROY_CODIGO)
            <div class="col-md-2">
                @Html.Editor("ACTI_CODIGO", new { htmlAttributes = new { @class = "form-control input-sm", id = "pc" } })
                @Html.ValidationMessage("ACTI_CODIGO", "", new { @class = "text-danger" })
            </div>

            @*@Html.LabelFor(model => model.PROG_NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-8">
                @Html.Editor("ACTI_NOMBRE", new { htmlAttributes = new { @class = "form-control input-sm" } })
                @Html.ValidationMessage("ACTI_NOMBRE", "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <button onclick="HideAC(1,@ViewBag.EsNuevo)" type="button" class="btn btn-success btn-sm" data-toggle="tooltip" title="Aceptar">
                    <span class="fa fa-check"></span>
                </button>

                <button onclick="HideActivs()" type="button" class="btn btn-warning btn-sm" data-toggle="tooltip" title="Cancelar">
                    <span class="fa fa-remove"></span>
                </button>

            </div>
        </div>
    </div>
</div>

<script>
    $('#ACTI_NOMBRE').keyup(function () {
        var datos = new String($('#ACTI_NOMBRE').val());
        datos = datos.toUpperCase(datos);
        $('#ACTI_NOMBRE').val(datos);
    })
</script>

