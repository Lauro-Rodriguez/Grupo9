                        <input type="button" title="Devolver" value="Devolver" onclick="location.href='@Url.Action("_AsignaHist", "AprobarDispPres", new { id = item.NUM_SOLIC,Estado="DV",Organico=item.ORG_CODIGO})'" class="btn btn-danger btn-xs" />
                        @*@Html.ActionLink("Eliminar", "Delete", "", new { @class = "glyphicon glypicon-trash" })*@
