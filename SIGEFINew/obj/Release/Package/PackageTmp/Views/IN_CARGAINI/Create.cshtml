                if (data == false) {
                    row.find(".Update").show();
                }
             });

        });

        //Update event handler.
    $("body").on("click", "#tblCustomers .Update", function () {
        var Cant = 0;
        var Costo = 0;
        var Total = 0;

        var Cont = 1;

            var row = $(this).closest("tr");
            $("td", row).each(function () {
                if ($(this).find("input").length > 0) {
                    var span = $(this).find("span");
                    var input = $(this).find("input");
                    span.html(input.val());

                    if (Cont == 1) {
                        Cant = input.val();
                    }
                    else {
                        Costo = input.val();
                    }
                    span.show();
                    input.hide();

                    Cont = Cont + 1;
                }
                else {
                    if (Cant > 0) {
                        Total = Cant * Costo;
                        var span = $(this).find("span");
                        span.html(Total.toFixed(2));
                    //alert(Total);
                    }
                }
            });
            row.find(".Edit").show();
            //row.find(".Delete").show();
            row.find(".Cancel").hide();
            $(this).hide();

            var customer = {};
            customer.PAEG_CODIGO = row.find(".PAEG_CODIGO").find("span").html();
            customer.VALOR_TOTAL = row.find(".COSTO").find("span").html();
            customer.ACTI_CODIGO = row.find(".ACTI_CODIGO").find("span").html();
            customer.ITEM_CLAVE = row.find(".ITEM_CLAVE").find("span").html();
            //customer.Country = row.find(".Country").find("span").html();

            $.ajax({
                type: "POST",
                url: "/DETALLEGRESOS/UpdateCustomer",
                data: '{customer:' + JSON.stringify(customer) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",

            });

            GetTotalesHead();
            GetTotales();

        });

        //Cancel event handler.
        $("body").on("click", "#tblCustomers .Cancel", function () {
            var row = $(this).closest("tr");
            $("td", row).each(function () {
                if ($(this).find("input").length > 0) {
                    var span = $(this).find("span");
                    var input = $(this).find("input");
                    input.val(span.html());
                    span.show();
                    input.hide();
                }
            });
            row.find(".Edit").show();
            row.find(".Delete").show();
            row.find(".Update").hide();
            $(this).hide();
        });



