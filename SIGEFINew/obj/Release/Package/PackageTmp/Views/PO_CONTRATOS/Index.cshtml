@model IEnumerable<SIGEFINew.Models.Contratacion.PO_CONTRATOS>

<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","PO_CONTRATOS")+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        @*<div class="col-md-1">
            <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>*@
        <div class="col-md-5 col-lg-offset-6">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>

    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Contratos</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                     <th style="width:20%">
                        @Html.DisplayNameFor(model => model.NUM_CONTRATO)
                    </th>
                    <th style="width:30%">
                        @Html.DisplayNameFor(model => model.DESC_CONTRATO)
                    </th>
                    <th style="width:30%">
                        @Html.DisplayNameFor(model => model.COD_CONTRATISTA)
                    </th>
                    @*<th style="width:5%">
                        @Html.DisplayNameFor(model => model.MONTO_REF)
                    </th>*@
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.MONTO)
                    </th>

                    <th style="width:10%"></th>
                </tr>
            </thead>
            

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:20%">
                        @Html.DisplayFor(modelItem => item.NUM_CONTRATO)
                    </td>
                     <td style="width:30%">
                        @Html.DisplayFor(modelItem => item.DESC_CONTRATO)
                    </td>
                    <td style="width:30%">
                        @Html.DisplayFor(modelItem => item.COD_CONTRATISTA)
                    </td>
                    @*<td style="width:10%">
                        @Html.DisplayFor(modelItem => item.MONTO_REF)
                    </td>*@
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.MONTO)
                    </td>
 
                    <td style="width:5%">
                        @Html.ActionLink(" ", "Create", new { Codigo = item.COD_CONTRATO }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { Codigo = item.COD_CONTRATO }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                        @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



