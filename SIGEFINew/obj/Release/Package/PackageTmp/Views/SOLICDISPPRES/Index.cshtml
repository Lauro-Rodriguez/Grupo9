@model IEnumerable<SIGEFINew.Models.Presupuesto.PR_SOLICDISPPRESUP>

@{
    ViewBag.Title = "Solic. Disp. Presup.";
}

<br />
<br />
<h2>Solicitud de Disponibilidad Presupuestaria</h2>

<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <input type="button" value="Nuevo" onclick="@("location.href='"+ Url.Action("Create","PR_SOLICDISPPRESUP",new {@id =@ViewBag.CodPlan,@id2 =@ViewBag.OrgCodi,@id3 =@ViewBag.CodPlanObj })+ "'")" class="btn btn-primary" />
        </div>
        <div class="col-md-5">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>
    </div>

</div>

<table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NUM_SOLIC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_SOLICITA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DETALLE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VALOR)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NUM_SOLIC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FECHA_SOLICITA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DETALLE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VALOR)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
