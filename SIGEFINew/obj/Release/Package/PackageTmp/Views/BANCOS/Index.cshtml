@model IEnumerable<SIGEFINew.Models.BANCOS>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Inst. Finan.";
}

<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","Bancos")+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        <div class="col-md-1">
            <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>
        <div class="col-md-5 col-lg-offset-5">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>

    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Instituciones Financieras</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:10%">
                        @Html.ActionLink("Código", "Index", new { sortOrder = ViewBag.Codigo_Banco, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th style="width:50%">
                        @Html.ActionLink("Descripción", "Index", new { sortOrder = ViewBag.Descripcion, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th style="width:10%">
                        Código B.C.E.
                    </th>
                    <th style="width:10%">
                        Tipo
                    </th>
                    <th style="width:10%">
                        Tipo Banca
                    </th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                 <tr>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.CODIGO_BANCO)
                    </td>
                    <td style="width:50%">
                        @Html.DisplayFor(modelItem => item.DESCRIPCION)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.CODIGO_ENVIO)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.TIPO)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.CONDICION)
                    </td>
                    <td style="width:10%">
                        @Html.ActionLink(" ", "Create", new { id = item.CODIGO_BANCO }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                        @*@Html.ActionLink("Details", "Details", new { id = item.CODIGO_BANCO }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CODIGO_BANCO })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


