@model SIGEFINew.Models.Presupuesto.Programa

@{
    ViewBag.Title = "Editar";
}
</br>
</br>

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <section class="card2">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Información General</a></li>
            </ul>
            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">
                    <div class="form-horizontal">
                        <h4>Programa</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID_INSTITUCION)

                        @Html.HiddenFor(model => model.PROG_CODIGO)

                        <div class="form-group">
                            @Html.LabelFor(model => model.PROG_NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.PROG_NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PROG_NOMBRE, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-success" />
                            </div>
                        </div>
                        <div>
                            @Html.ActionLink("Regresar a la Lista", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    
}


