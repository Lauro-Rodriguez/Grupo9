@model SIGEFINew.Models.Presupuesto.Item

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="container">
        <section class="card2">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Información General</a></li>
            </ul>
            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">
                    <br />
                    <div class="form-horizontal">
                        <h4>Item</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ITEM_CLAVE)

                        <div class="form-group">
                            @Html.Label("Grupo", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-7">
                                @Html.DropDownList("GRUP_CODIGO", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.GRUP_CODIGO, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.Label("Item", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-1">
                                    @Html.Editor("GRUPO", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                                <div class="col-md-1">
                                    @Html.EditorFor(model => model.ITEM_CODIGO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ITEM_CODIGO, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.ITEM_SUBITEM, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-1">
                                @Html.EditorFor(model => model.ITEM_SUBITEM, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ITEM_SUBITEM, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ITEM_NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ITEM_NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ITEM_NOMBRE, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-success" />
                            </div>
                        </div>
                        <div>
                            @Html.ActionLink("Regresar a la Lista", "Index")
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
    

}


<script>
    $(document).ready(function () {
        $("#GRUP_CODIGO").change(function () {
            var grupcod = $("#GRUP_CODIGO").val();

            $("#GRUPO").val(grupcod);
            $("#ITEM_CLAVE").val(grupcod);
            //alert("Hola Mundo con jQuery!" + grupcod);
        });
    });
</script>