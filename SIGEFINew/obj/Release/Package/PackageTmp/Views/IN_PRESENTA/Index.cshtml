@model IEnumerable<SIGEFINew.Models.Inventarios.IN_PRESENTA>

<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","IN_PRESENTA")+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        @*<div class="col-md-1">
                <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                    <span class="glyphicon glyphicon-print"></span> Imprimir
                </button>
            </div>*@
        @using (Html.BeginForm())
        {
            <div class="col-md-3">
                @*<button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                        <span class="glyphicon glyphicon-print"></span> Imprimir
                    </button>*@
                @Html.DropDownList("CodCaract", ViewBag.COD_CAGEN as SelectList, new { @class = "form-control input-sm", onchange = "this.form.submit();" })
            </div>

            <div class="col-md-5 col-lg-offset-3">
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            </div>
        }

    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Presentación</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:10%">
                        Unidad de Medida
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.COD_PRESEN)
                    </th>
                    <th style="width:70%">
                        @Html.DisplayNameFor(model => model.DESCRIP_CAGEN)
                    </th>

                    <th style="width:10%"></th>
                </tr>
            </thead>


            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.IN_CARACGEN.DESCRIP_CAGEN)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.COD_PRESEN)
                    </td>
                    <td style="width:70%">
                        @Html.DisplayFor(modelItem => item.DESCRIP_CAGEN)
                    </td>

                    <td style="width:10%">
                        @Html.ActionLink(" ", "Create", new { id = item.COD_CAGEN, id2 = item.COD_PRESEN }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" }) |
                        @*@Html.ActionLink(" ", "Details", new { id = item.ID_BODEGA }, new { @class = "btn btn-primary glyphicon glyphicon-user btn-xs", data_toggle = "tooltip", title = "Editar" }) |*@
                        @Html.ActionLink(" ", "Delete", new { id = item.COD_CAGEN, id2 = item.COD_PRESEN }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
