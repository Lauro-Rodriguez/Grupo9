@model  IEnumerable<SIGEFINew.Models.RegisterViewModel>
@{
    ViewBag.Title = "Usuarios";
}
<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Register","Account")+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        <div class="col-md-1">
            <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>
        <div class="col-md-5 col-lg-offset-5">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>

    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Usuarios</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.Login)
                    </th>
                    <th style="width:20%">
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th style="width:45%">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.TypeUser)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th style="width:5%"></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td style="width:20%">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td style="width:45%">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.TypeUser)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td style="width:5%">
                        @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                        @*@Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


