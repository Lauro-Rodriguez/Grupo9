@model IEnumerable<SIGEFINew.Models.Inventarios.IN_SUBTIPOS>

<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","IN_SUBTIPOS",new {@ViewBag.IdClase,@ViewBag.IdTipo })+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        @*<div class="col-md-1">
            <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>*@
        <div class="col-md-5 col-lg-offset-6">
            @using (Html.BeginForm())
            {
            <div class="input-group">
                @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>

            </div><!-- /input-group -->
            }
        </div>

    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">SubFamilias</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:15%">
                        Familia
                    </th>
                    <th style="width:10%">
                        Código
                    </th>
                    <th style="width:65%">
                        Descripción
                    </th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            
            @foreach (var item in Model)
    {
            <tr>
                <td style="width:15%">
                    @Html.DisplayFor(modelItem => item.IN_TIPOS.NOM_TIPO)
                </td>
                <td style="width:10%">
                    @Html.DisplayFor(modelItem => item.ID_SUBTIPO)
                </td>
                <td style="width:65%">
                    @Html.DisplayFor(modelItem => item.NOM_SUBTIPO)
                </td>
                <td style="width:10%">
                    @Html.ActionLink(" ", "Create", new { IdClase = item.ID_CLASE, IdTipo = item.ID_TIPO,id=item.ID_SUBTIPO }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.ID_CLASE }, new { @class = "btn btn-primary glyphicon glyphicon-collapse-down btn-xs", data_toggle = "tooltip", title = "Subfamilias" }) |
                    @Html.ActionLink(" ", "Delete", new { IdClase = item.ID_CLASE, IdTipo = item.ID_TIPO,id=item.ID_SUBTIPO }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                </td>
            </tr>
    }

        </table>
    </div>
</div>

