@model IEnumerable<SIGEFINew.Models.POA.POA_TIPOPROYECTOS>

@{
    ViewBag.Title = "Tipos Proy.";
}
<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","POA_TIPOPROYECTOS")+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        @*<div class="col-md-1">
            <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>*@
        <div class="col-md-6 col-lg-offset-5">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>

    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Tipos de Proyectos</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.TIPO)
                    </th>
                    <th style="width:60%">
                        @Html.DisplayNameFor(model => model.NOM_TIPOPROY)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.COD_TIPOPROYP)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.ESTADO_TP)
                    </th>
                    <th style="width:10%"></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:10%"> 
                        @Html.DisplayFor(modelItem => item.TIPO)
                    </td>
                    <td style="width:60%">
                        @Html.DisplayFor(modelItem => item.NOM_TIPOPROY)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.COD_TIPOPROYP)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.ESTADO_TP)
                    </td>
                    <td style="width:10%">
                        @Html.ActionLink(" ", "Create", new { id = item.COD_TIPOPROY}, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { id = item.COD_TIPOPROY }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

