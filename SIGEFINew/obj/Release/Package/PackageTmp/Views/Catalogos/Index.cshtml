@model IEnumerable<SIGEFINew.Models.Presupuesto.Catalogos>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","Catalogos")+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        <div class="col-md-1">
            <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>
        <div class="col-md-5 col-lg-offset-5">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>

    </div>

</div>

<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Catálogo de Bienes y Servicios</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:20%">
                        Tipo de Recurso
                    </th>
                    <th style="width:10%">
                        @Html.ActionLink("Código", "Index", new { sortOrder = ViewBag.cat_Codigo, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th style="width:52%">
                        @Html.ActionLink("Descripción", "Index", new { sortOrder = ViewBag.cat_Nombre, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    @*<th style="width:8%">
                        Valor
                    </th>*@
                    @*<th style="width:5%">
                        Partida P.
                    </th>*@
                    @*<th style="width:5%">
                        Tipo
                    </th>*@
                    @*<th style="width:5%">
                        Tipo Gasto
                    </th>*@
                    <th style="width:5%">
                        Estado
                    </th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:20%">
                        @Html.DisplayFor(modelItem => item.TIPORECURSOS.TRE_NOMBRE)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.CAT_CODIGO)
                    </td>

                    <td style="width:52%">
                        @Html.DisplayFor(modelItem => item.CAT_NOMBRE)
                    </td>
                    @*<td align="right" style="width:8%">
                        @Html.DisplayFor(modelItem => item.CAT_VALOR)
                    </td>*@
                    @*<td style="width:5%">
                        @Html.DisplayFor(modelItem => item.ITEM_CLAVE)
                    </td>*@
                    @*<td style="width:5%">
                        @Html.DisplayFor(modelItem => item.TIPO)
                    </td>*@
                    @*<td style="width:5%">
                        @Html.DisplayFor(modelItem => item.TIPO_GASTO)
                    </td>*@
                    <td style="width:8%">
                        @Html.DisplayFor(modelItem => item.ESTADO)
                    </td>
                    <td style="width:10%">
                        @Html.ActionLink(" ", "Create", new { id = 0, id2 = item.CAT_CODIGO }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { id = 0, id2 = item.CAT_CODIGO }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


