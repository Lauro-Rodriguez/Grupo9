@model SIGEFINew.Models.POA.POA_EPG

@{
    ViewBag.Title = "Borrar";
}

<div class="col-md-8">
    <div class="box box-warning">
        <div class="box-header with-border">
            <i class="glyphicon glyphicon-remove-sign"></i>
            <h3 class="box-title">Borrar Grupo Presupuestario</h3>
        </div>
        <div class="box-body">
            <h4>Está seguro de borrar este registro?</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.POA_PR_PDOT.NOM_PR_PDOT)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.POA_PR_PDOT.NOM_PR_PDOT)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NOM_EPG)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NOM_EPG)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Borrar" class="btn btn-danger" /> |
                    @Html.ActionLink("Regresar a la Lista", "Index")
                </div>
            }
        </div>
    </div>
</div>

