@model IEnumerable<SIGEFINew.Models.Nomina.RP_TIPOSANTICIPO>


<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","RP_TIPOSANTICIPO")+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        @*<div class="col-md-1">
            <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>*@
        <div class="col-md-5 col-lg-offset-6">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>

    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Tipos de Anticipo</h3>
    </div>
    <div class="box-body">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.ID_TIPOANTICIPO)
                    </th>
                    <th style="width:50%">
                        @Html.DisplayNameFor(model => model.DESCRIPCION_ANTICIPO)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.LIMITE_CUOTAS)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.LIMITE_MONTO)
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.PORC_DESCDIC)
                    </th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
           

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.ID_TIPOANTICIPO)
                    </td>
                    <td style="width:50%">
                        @Html.DisplayFor(modelItem => item.DESCRIPCION_ANTICIPO)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.LIMITE_CUOTAS)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.LIMITE_MONTO)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.PORC_DESCDIC)
                    </td>
                    <td style="width:10%">
                        @Html.ActionLink(" ", "Create", new { id = item.ID_TIPOANTICIPO }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { id = item.ID_TIPOANTICIPO }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


