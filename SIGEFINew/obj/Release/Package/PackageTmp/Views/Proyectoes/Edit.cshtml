                            @Html.DropDownListFor(model => model.SUBP_CODIGO, new SelectList(" "), "Eija un Subprograma", new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.SUBP_CODIGO, "", new { @class = "text-danger" })
                        </div>
                    </div>

