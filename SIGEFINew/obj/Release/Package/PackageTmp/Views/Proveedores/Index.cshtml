@model IEnumerable<SIGEFINew.Models.Proveedores>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Proveed.";
}

<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","Proveedores")+ "'")" class="btn btn-primary">
                <span class="fa fa-plus"></span> Nuevo
            </button>
        </div>
        <div class="col-md-1">
            <button type="submit" onclick="@("location.href='"+ Url.Action("Print","PartIngresoes")+ "'")" class="btn btn-primary">
                <span class="glyphicon glyphicon-print"></span> Imprimir
            </button>
        </div>
        <div class="col-md-5 col-lg-offset-5">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div><!-- /input-group -->
            }
        </div>

    </div>

</div>
<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Proveedores</h3>
    </div>
    <div class="box-body">
        <table class="table table-fixed table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:10%">
                        Código
                    </th>
                    <th style="width:10%">
                        T. Identif.
                    </th>
                    <th style="width:10%">
                        @Html.ActionLink("Cédula/RUC", "Index", new { sortOrder = ViewBag.Numcedruc_prov, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th style="width:20%">
                        @Html.ActionLink("Nombre", "Index", new { sortOrder = ViewBag.Nombre, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th style="width:10%">
                        Dirección
                    </th>
                    <th style="width:10%">
                        Teléfono
                    </th>

                    <th style="width:10%">
                        C.E.
                    </th>
                    <th style="width:10%">
                        EMail
                    </th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.COD_PROV)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.TIPO_IDENTI)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.NUMCEDRUC_PROV)
                    </td>
                    <td style="width:20%">
                        @Html.DisplayFor(modelItem => item.NOMBRE)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.DIRECCION)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.TELEFONO)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.CONTRIBESPECIAL)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.EMAIL)
                    </td>
                    <td style="width:10%">
                        @Html.ActionLink(" ", "Create", new { id = item.COD_PROV }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { id = item.COD_PROV }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



