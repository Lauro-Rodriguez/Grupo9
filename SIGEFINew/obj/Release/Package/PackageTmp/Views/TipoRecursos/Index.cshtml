@model IEnumerable<SIGEFINew.Models.Presupuesto.TipoRecursos>
@using PagedList.Mvc;
@{
    ViewBag.Title = "T. Recursos";
}
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
                <button id="buttonnew" type="submit" onclick="@("location.href='"+ Url.Action("Create","TipoRecursos")+ "'")" class="btn btn-primary">
                    <span class="fa fa-plus"></span> Nuevo
                </button>
            </div>
            <div class="col-md-1">
                <button type="submit" onclick="@("location.href='"+ Url.Action("Print","TipoRecursos")+ "'")" class="btn btn-primary">
                    <span class="glyphicon glyphicon-print"></span> Imprimir
                </button>
            </div>
            <div class="col-md-5 col-lg-offset-5">
                @using (Html.BeginForm())
                {
                    <div class="input-group">
                        @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control", placeholder = "Buscar por Nombre" } })
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-info">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>

                    </div><!-- /input-group -->
                }
            </div>

        </div>

    </div>

    <div class="box box-primary">
        <div class="box-header">
            <i class="ion ion-clipboard"></i>
            <h3 class="box-title">Tipos de Recusrsos</h3>
        </div>
        <div class="box-body">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th style="width:10%">
                            @Html.ActionLink("Código", "Index", new { sortOrder = ViewBag.Tre_Codigo, currentFilter = ViewBag.CurrentFilter })
                            @*@Html.DisplayNameFor(model => model.PROG_CODIGO)*@
                        </th>
                        <th style="width:40%">
                            @Html.ActionLink("Descripción", "Index", new { sortOrder = ViewBag.Tre_Nombre, currentFilter = ViewBag.CurrentFilter })
                            @*@Html.DisplayNameFor(model => model.PROG_NOMBRE)*@
                        </th>
                        <th style="width:40%">
                            Dirección Responsable
                        </th>
                        <th style="width:10%"></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:10%">
                            @Html.DisplayFor(modelItem => item.TRE_CODIGO)
                        </td>
                        <td style="width:40%">
                            @Html.DisplayFor(modelItem => item.TRE_NOMBRE)
                        </td>
                        <td style="width:40%">
                            @Html.DisplayFor(modelItem => item.Organicof.ORG_NOMBRE)
                        </td>
                        <td style="width:10%">
                            @Html.ActionLink(" ", "Create", new { id = item.TRE_CODIGO }, new { @class = "btn btn-primary glyphicon glyphicon-edit btn-xs", data_toggle = "tooltip", title = "Editar" })
                            @Html.ActionLink(" ", "Delete", new { id = item.TRE_CODIGO }, new { @class = "btn btn-danger glyphicon glyphicon-trash btn-xs", data_toggle = "tooltip", title = "Eliminar" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>


